<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProfileImage">
        <item name="android:src">@drawable/default_user_pic</item>
    </style>
    <style name="ProfilePictureMedium" parent="ProfileImage">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="ProfilePictureLarge" parent="ProfileImage">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
    </style>

    <style name="SkillIcon" >
        <item name="android:src">@drawable/ic_default_skill</item>
    </style>

    <style name="SkillIconMedium" parent="SkillIcon">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="SkillIconSmall" parent="SkillIcon">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
    </style>
</resources>
